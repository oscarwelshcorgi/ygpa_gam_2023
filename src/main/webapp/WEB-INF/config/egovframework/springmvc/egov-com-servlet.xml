 -->
	<!-- 로그인 체크가 필요한 URL과 로그인 여부를 체크해줄 인터셉터를 등록한다. -->
	<mvc:interceptors>
		<ref bean="authenticInterceptor" />
		<ref bean="ipObtainInterceptor"/>
	</mvc:interceptors>

	<!-- 로그인 체크 인터셉터 -->
	<bean id="authenticInterceptor" class="egovframework.com.cmm.interceptor.AuthenticInterceptor">
		<!-- 인증 체크가 필요 없는 URL 리스트 -->
		<property name="permittedURL">
			<set>
				<value>/uat/uia/[a-zA-Z]+\.do</value>
				<value>/code404.do</value>
				<value>/code500.do</value>
			</set>
		</property>
	</bean>

	<!-- IP 정보 기록 -->
	<bean id="ipObtainInterceptor" class="egovframework.com.cmm.interceptor.IpObtainInterceptor" />

	<!--
		- This bean resolves specific types of exceptions to corresponding logical
		- view names for error views. The default behaviour of DispatcherServlet
		- is to propagate all exceptions to the servlet container: this will happen
		- here with all other types of exceptions.
	-->
	<bean class="org.springframework.web.servlet.handler.SimpleMappingExceptionResolver">
		<property name="defaultErrorView" value="egovframework/com/cmm/error/egovError"/>
		<property name="exceptionMappings">
			<props>
				<prop key="org.springframework.dao.DataAccessException">ygpa/cmm/error/dataAccessFailure</prop>
				<prop key="org.springframework.transaction.TransactionException">ygpa/cmm/error/dataAccessFailure</prop>
				<prop key="egovframework.rte.fdl.cmmn.exception.EgovBizException">ygpa/cmm/error/egovBizException</prop>
				<prop key="org.springframework.web.HttpSessionRequiredException">ygpa/cmm/error/egovHttpSessionException</prop>
			</props>
		</property>
	</bean>

	<!--
		- This bean configures the 'prefix' and 'suffix' properties of
		- InternalResourceViewResolver, which resolves logical view names
		- returned by Controllers. For example, a logical view name of "vets"
		- will be mapped to "/WEB-INF/jsp/vets.jsp".
	-->
	<bean class="org.springframework.web.servlet.view.UrlBasedViewResolver" p:order="3" p:prefix="/WEB-INF/jsp/egovframework/rte/" p:suffix=".jsp" p:viewClass="org.springframework.web.servlet.view.JstlView"/>

	<!--
		- Message source for this context, loaded from localized "messages_xx" files.
		- Could also reside in the root application context, as it is generic,
		- but is currently just used within Application's web tier.
	-->
	<!-- <bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource" p:basename="messages/message-common"/> -->
	<bean class="org.springframework.web.servlet.view.BeanNameViewResolver" p:order="2" />

</beans>